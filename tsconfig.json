{
  "compilerOptions": {
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "exactOptionalPropertyTypes": true,
    "lib": ["ES2020", "ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "paths": {
      "@lfmfmt/*": ["packages/*"]
    },
    "baseUrl": "./"
  },
  "exclude": ["coverage/", "node_modules/", "**/example.js"]
}
